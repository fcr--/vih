%%%%%% LOCALIZATION %%%%%%

% To change the language, redefine in ~/.vih/init.ps the symbol /chosen_messages
% to your preferred dictionary of messages.

/messages_es <<
  /insert_mode "<<Insertar>>"
  /options "* Opciones: [-s script] [archivo] ..."
  /cant_close_last_win "* No se puede cerrar la última ventana"
>> def

/messages_en <<
  /insert_mode "<<Insert>>"
  /options "* Options: [-s script] [filename] ..."
  /cant_close_last_win "* Can't close last window."
>> def

/messages_ja <<
  /insert_mode "<<挿入>>"
  /options "* 使用法: 引数: [-s スクリプト] [ファイル] ..."
  /cant_close_last_win "* 最後のウィンドウを閉じることはできません"
>> def

/chosen_messages messages_es def

% shift_width: number of spaces inserted when tab is pressed
/shift_width 4 def
