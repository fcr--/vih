%%%%%% LOCALIZATION %%%%%%

% To change the language, redefine in ~/.vih/init.ps the symbol /chosen_messages
% to your preferred dictionary of messages.

/messages_es <<
  /insert_mode "<<Insertar>>"
  /options "* Opciones: [-s script] [archivo] ..."
  /cant_close_last_win "* No se puede cerrar la última ventana"
  /no_prev_regexp "No existe una expresión regular previa"
  /restarting_search "La búsqueda ha llegado al FINAL, continuando desde el PRINCIPIO"
  /pattern_not_found "No se encontró el patrón de búsqueda"
>> def

/messages_en <<
  /insert_mode "<<Insert>>"
  /options "* Options: [-s script] [filename] ..."
  /cant_close_last_win "* Can't close last window."
  /no_prev_regexp "No previous regular expression"
  /restarting_search "search hit BOTTOM, continuing at TOP"
  /pattern_not_found "Pattern not found"
>> def

/messages_ja <<
  /insert_mode "<<挿入>>"
  /options "* 使用法: 引数: [-s スクリプト] [ファイル] ..."
  /cant_close_last_win "* 最後のウィンドウを閉じることはできません"
  /no_prev_regexp "正規表現がまだ実行されていません"
  /restarting_search "下まで検索したので上に戻ります"
  /pattern_not_found "パターンはみつかりませんでした"
>> def

/chosen_messages messages_es def

% shift_width: number of spaces inserted when tab is pressed
/shift_width 4 def
